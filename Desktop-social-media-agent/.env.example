# Post Planner API Configuration

# OpenAI API Key (for AI caption generation and variations)
# Get your key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# Canva Configuration (for design generation)
# Get your app credentials from: https://www.canva.com/developers/
CANVA_APP_ID=your_canva_app_id_here
CANVA_APP_ORIGIN=your_canva_app_origin_here
CANVA_ENABLE_HMR=TRUE
CANVA_CLIENT_ID=your_canva_client_id_here
CANVA_CLIENT_SECRET=your_canva_client_secret_here
# For REST API endpoints - use Client ID as API key
CANVA_API_KEY=your_canva_client_id_here

# Server Configuration
PORT=3001
