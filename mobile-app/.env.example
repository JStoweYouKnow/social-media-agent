# Post Planner Mobile App - Environment Variables
# Copy this file to .env and fill in your values

# Clerk Authentication (REQUIRED)
EXPO_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_your_clerk_key_here

# OpenAI API (REQUIRED for AI features)
EXPO_PUBLIC_OPENAI_API_KEY=sk-your_openai_key_here

# Anthropic API (OPTIONAL - fallback for AI)
EXPO_PUBLIC_ANTHROPIC_API_KEY=sk-ant-your_anthropic_key_here

# Convex Database (OPTIONAL)
EXPO_PUBLIC_CONVEX_URL=https://your-deployment.convex.cloud

# API Base URL (use local IP for dev, not localhost)
# Your local IP appears to be: 192.168.1.94
EXPO_PUBLIC_API_BASE_URL=http://192.168.1.94:3000

# Stripe (REQUIRED for subscriptions)
EXPO_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_key_here

# Sentry (OPTIONAL - for error tracking)
EXPO_PUBLIC_SENTRY_DSN=https://your_sentry_dsn_here
